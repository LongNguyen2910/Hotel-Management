@model Hotel_Management.Models.ViewModel.AccountViewModel
@{
    ViewData["Title"] = "Thêm User";
    Layout = "_ContentNavbarLayout";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" asp-controller="UserManagement">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="UserName" class="form-label">Username</label>
                <input asp-for="UserName" class="form-control" placeholder="Nhập username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Mật khẩu</label>
                <input asp-for="Password" class="form-control" placeholder="Nhập mật khẩu" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group text-center mt-4">
                <button type="submit" class="btn btn-primary px-4">Lưu</button>
                <a asp-action="Index" asp-controller="UserManagement" class="btn btn-secondary px-4 ms-2">Quay lại</a>
            </div>
        </form>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />
