@model Hotel_Management.Models.ViewModel.UserRolesViewModel
@{
    ViewData["Title"] = "Phân quyền người dùng";
    Layout = "_ContentNavbarLayout";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Phân quyền cho: @Model.UserName</h5>
        <a asp-action="Index" class="btn btn-sm btn-secondary">Quay lại</a>
    </div>
    <div class="card-body">
        <form asp-action="Roles" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="UserId" />
            <div class="row">
                @for (int i = 0; i < Model.Roles.Count; i++)
                {
                    <div class="col-md-6 mb-2">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="SelectedRoleName" value="@Model.Roles[i].Name" @(Model.SelectedRoleName == Model.Roles[i].Name ? "checked" : null) />
                            <label class="form-check-label">@Model.Roles[i].Name</label>
                        </div>
                    </div>
                }
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Lưu</button>
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">Hủy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}