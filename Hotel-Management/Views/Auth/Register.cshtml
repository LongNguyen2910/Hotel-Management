@model Hotel_Management.Models.ViewModel.RegisterViewModel
@{
  Layout = "_BlankLayout";
  ViewData["Title"] = "Register Basic - Pages";
}

@section PageStyles {
<link rel="stylesheet" href="~/vendor/css/pages/page-auth.css" />
}

@* ************** Content ************** *@
<div class="position-relative">
  <div class="authentication-wrapper authentication-basic container-p-y">
    <div class="authentication-inner py-6 mx-4">
      <!-- Register Card -->
      <div class="card p-sm-7 p-2">
        <!-- Logo -->
        <div class="app-brand justify-content-center mt-5">
          <div class="app-brand-link gap-3">
            <span class="app-brand-logo demo">@await Html.PartialAsync("../_Partials/_Macros")</span>
            <span class="app-brand-text demo text-heading fw-semibold">@TempData.Peek("appName")</span>
          </div>
        </div>
        <!-- /Logo -->
        <div class="card-body mt-1">
          <h4 class="mb-1">Adventure starts here ðŸš€</h4>
          <p class="mb-5">Make your app management easy and fun!</p>

          <form id="formAuthentication" class="mb-5" asp-action="Register" asp-controller="Auth" method="POST">
            <div class="form-floating form-floating-outline form-control-validation">
              <input type="text" class="form-control" id="Username" name="Username" placeholder="Enter your username" autofocus />
              <label for="Username">Username</label>
            </div>
            <span asp-validation-for="UserName" class="text-danger  mb-5"></span>
            <div class="form-floating form-floating-outline form-control-validation">
                <input type="password" id="Password" class="form-control" name="Password" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="password" />
                <label for="Password">Password</label>
            </div>
            <span asp-validation-for="Password" class="text-danger mb-5"></span>
            <button class="btn btn-primary d-grid w-100">Sign up</button>
          </form>

          <p class="text-center mb-5">
            <span>Already have an account?</span>
            <a href="/Auth/LoginBasic">
              <span>Sign in instead</span>
            </a>
          </p>
        </div>
      </div>
      <!-- Register Card -->
      <img src="~/img/illustrations/tree-3.png" alt="auth-tree" class="authentication-image-object-left d-none d-lg-block" />
      <img src="~/img/illustrations/auth-basic-mask-light.png" class="authentication-image d-none d-lg-block scaleX-n1-rtl" height="172" alt="triangle-bg" />
      <img src="~/img/illustrations/tree.png" alt="auth-tree" class="authentication-image-object-right d-none d-lg-block" />
    </div>
  </div>
</div>

<partial name="_ValidationScriptsPartial" />