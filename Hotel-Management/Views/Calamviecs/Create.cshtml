@model Hotel_Management.Models.Calamviec

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}

<<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Thêm thông tin nhân viên</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label class="form-label">Tên ca làm việc</label>
                    <input asp-for="Macalamviec" class="form-control" type="number" />
                    <span asp-validation-for="Macalamviec" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Thời gian bắt đầu</label>
                    <input asp-for="Thoigianbatdau" class="form-control" />
                    <span asp-validation-for="Thoigianbatdau" class="text-danger"></span>
                </div>
                <div class="mt-3">
                    <label class="form-label">Thời gian kết thúc</label>
                    <input asp-for="Thoigianketthuc" class="form-control" />
                    <span asp-validation-for="Thoigianketthuc" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Lưu</button>
                <a asp-action="Index" class="btn btn-secondary">Huỷ</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

