@model Hotel_Management.Helpers.PaginatedList<Hotel_Management.Models.Calamviec>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}

<div class="col-12">
    <div class="card overflow-hidden">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Danh sách ca làm việc</h5>
            <div class="d-flex align-items-center">
                <a asp-controller="Calamviecs" asp-action="Create" class="btn btn-sm btn-primary">Thêm ca làm việc</a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th class="text-truncate">Tên ca làm việc</th>
                        <th class="text-truncate">Thời gian bắt đầu</th>
                        <th class="text-truncate">Thời gian kết thúc</th>
                        <th class="text-truncate">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div>
                                        <h6 class="mb-0 text-truncate">@item.Macalamviec</h6>
                                    </div>
                                </div>
                            </td>
                            <td class="text-truncate">@item.Thoigianbatdau</td>
                            <td class="text-truncate">@item.Thoigianketthuc</td>
                            <td>
                                <a asp-controller="Calamviecs" asp-action="Edit" asp-route-id="@item.Macalamviec" class="btn btn-sm btn-outline-primary">Sửa</a>
                                <a asp-controller="Calamviecs" asp-action="Delete" asp-route-id="@item.Macalamviec" class="btn btn-sm btn-outline-danger">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<div class="mt-3">
    <a asp-action="Index"
       asp-route-pageNumber="@(Model.PageIndex - 1)"
       class="btn btn-outline-primary @prevDisabled">
        <i class="bx bx-chevron-left"></i> Trước
    </a>
    <a asp-action="Index"
       asp-route-pageNumber="@(Model.PageIndex + 1)"
       class="btn btn-outline-primary @nextDisabled">
        Sau <i class="bx bx-chevron-right"></i>
    </a>
    <span class="ms-2 text-muted">
        Trang @Model.PageIndex / @Model.TotalPages
    </span>
</div>