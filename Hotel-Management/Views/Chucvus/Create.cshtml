@model Hotel_Management.Models.Chucvu

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}

<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Thêm thông tin chức vụ</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label class="form-label">Tên chức vụ</label>
                    <input asp-for="Tenchucvu" class="form-control" type="number" />
                    <span asp-validation-for="Tenchucvu" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Lương cơ bản</label>
                    <input asp-for="Luongcoban" class="form-control" />
                    <span asp-validation-for="Luongcoban" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Lưu</button>
                <a asp-action="Index" class="btn btn-secondary">Huỷ</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
