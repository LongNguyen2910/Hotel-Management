@model IEnumerable<Hotel_Management.Models.Mon>

@{
    ViewData["Title"] = "Đặt món";
    var currentFilter = ViewData["CurrentFilter"] as string ?? string.Empty;
    var errorMessage = TempData["Error"] as string;
}
@if (!string.IsNullOrEmpty(errorMessage))
{
    <div id="alertMessage" class="alert alert-danger text-center" role="alert">
        @errorMessage
    </div>

    <script>
        setTimeout(() => {
            var alertBox = document.getElementById("alertMessage");
            if (alertBox) alertBox.style.display = "none";
        }, 5000);
    </script>
}
<div class="card-header d-flex justify-content-between align-items-center mb-4">
    <h5 class="mb-0">Đặt món</h5>
    <div class="d-flex align-items-center">
        <form asp-action="Index" method="get" class="d-flex me-3">
            <input name="searchString" value="@currentFilter" class="form-control form-control-sm me-2" placeholder="Tìm theo tên món..." />
            <button type="submit" class="btn btn-sm btn-outline-primary">Tìm</button>
        </form>
    </div>
</div>
<div class="col-12">
    <div class="card overflow-hidden">
        <h2 class="mb-3 mt-3 text-center">Danh sách món ăn</h2>

            <form asp-action="Create" method="post">
                <table class="table table-striped align-middle text-center">
                    <thead>
                        <tr>
                            <th>Chọn</th>
                            <th>Ảnh</th>
                            <th>Tên món</th>
                            <th>Giá</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewData["NoResults"] != null)
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">
                                    <i class="bi bi-exclamation-circle">Không tìm thấy món phù hợp</i>
                                </td>
                            </tr>
                        }
                        else
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" name="selectedMons" value="@item.Mamon" />
                                    </td>
                                    <td>
                                        <img src="@Url.Action("GetImage", "Mons", new { id = item.Mamon })"
                                             alt="Ảnh món"
                                             class="img-thumbnail"
                                             style="width:100px; height:100px; object-fit:cover;" />
                                    </td>
                                    <td>@item.Tenmon</td>
                                    <td>@item.Gia</td>
                                </tr>
                            }
                    </tbody>
                </table>

                <div class="text-center mt-3 mb-3">
                    <button type="submit" class="btn btn-primary px-4">Đặt món</button>
                </div>
            </form>
    </div>
</div>
