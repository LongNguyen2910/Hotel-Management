@model Hotel_Management.Helpers.PaginatedList<Hotel_Management.Models.Mon>

@{
    ViewData["Title"] = "Đặt món";
    var currentFilter = ViewData["CurrentFilter"] as string ?? string.Empty;
    var errorMessage = TempData["Error"] as string;
}
@if (!string.IsNullOrEmpty(errorMessage))
{
    <div id="alertMessage" class="alert alert-danger text-center" role="alert">
        @errorMessage
    </div>
    if (errorMessage != null)
    {
        TempData.Remove("Error");
    }
    <script>
        setTimeout(() => {
            var alertBox = document.getElementById("alertMessage");
            if (alertBox) alertBox.style.display = "none";
        }, 5000);
    </script>
    
}
<div class="card-header d-flex justify-content-between align-items-center mb-4">
    <h5 class="mb-0">Đặt món</h5>
    <div class="d-flex align-items-center">
        <form asp-action="Index" method="get" class="d-flex me-3" id="search-form" autocomplete="off">
            <input id="searchString" name="searchString" value="@currentFilter" class="form-control form-control-sm me-2" placeholder="Tìm theo tên món..." />
            <button id="btnSearch" type="submit" class="btn btn-sm btn-outline-primary">Tìm</button>
        </form>
    </div>
</div>

<div id="datmons-container">
    @await Html.PartialAsync("_DatmonsList", Model)
</div>

@section Scripts {
    <script src="~/vendor/libs/jquery/jquery.js"></script>
    <script>
        (function ($) {

            const $container = $('#datmons-container');
            const baseUrl = '@Url.Action("Index", "Datmons")';

            function ClearButton(keyword) {
                const $form = $('#search-form');
                let $btn = $('#btnClear');
                if (keyword && !$btn.length) {
                    $btn = $('<button type="button" id="btnClear" class="btn btn-sm btn-outline-danger ms-2">Xóa</button>');
                    $form.append($btn);
                    $btn.on('click', function () {
                        $('#searchString').val('');
                        loadAjax(1, '');
                    });
                } else if (!keyword && $btn.length) {
                    $btn.remove();
                }
            }

            function showLoading() {
                $container.css('opacity', '.5');
            }
            function hideLoading() {
                $container.css('opacity', '1');
            }

            function loadAjax(page, keyword, push = true) {
                showLoading();
                $.ajax({
                    url: baseUrl,
                    method: 'GET',
                    data: {
                        pageNumber: page,
                        searchString: keyword
                    },
                    success: function (response) {
                        $container.html(response);
                        ClearButton(keyword);
                        if (push) {
                            history.pushState({ page, keyword }, '', location.pathname);
                        }
                    },
                    headers: { 'X-Requested-With': 'XMLHttpRequest' }
                })
                .always(function () {
                    hideLoading();
                });
            }

            // Pagination click (delegation)
            $('body').on('click', 'a.ajax-page', function (e) {
                e.preventDefault();
                if ($(this).hasClass('disabled')) return;
                const page = $(this).data('page');
                const keyword = $('#searchString').val().trim();
                loadAjax(page, keyword, true);
            });

            // Search submit
            $('#search-form').on('submit', function (e) {
                e.preventDefault();
                const keyword = $('#searchString').val().trim();
                loadAjax(1, keyword, true);
            });

            // Clear filter
            $('#btnClear').on('click', function () {
                $('#searchString').val('');
                loadAjax(1, '', true);
            });

            window.addEventListener('popstate', function(e){
                const state = e.state;
                if(state){
                    $('#searchString').val(state.keyword || '');
                    toggleClear(state.keyword || '');
                    loadAjax(state.page || 1, state.keyword || '', false);
                }
            });

            $(function(){
                const kw = $('#searchString').val().trim();
                ClearButton(kw);
            });


        })(jQuery);
    </script>
}