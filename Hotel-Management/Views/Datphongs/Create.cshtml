@model Hotel_Management.Models.Phong

@{
    ViewData["Title"] = "Xác nhận đặt phòng";
}

<h2 class="text-center mb-3">Xác nhận đặt phòng</h2>

<form asp-action="DatPhong" method="post">
    <input type="hidden" name="maphong" value="@Model.Maphong" />

    <div class="mb-3">
        <label for="makhachhang" class="text-truncate">Mã khách hàng</label>
        <input type="number" name="makhachhang" class="form-control" placeholder="Nhập mã khách hàng" required />
    </div>

    <div class="card mb-4 mx-auto" style="max-width: 600px;">
        <img src="@Url.Action("GetImage", "Phongs", new { id = Model.Maphong })"
             class="card-img-top"
             style="height:300px; object-fit:cover;" />
        <div class="card-body">
            <h5 class="card-title">@Model.Tenphong - @Model.MaloaiphongNavigation?.Tenloaiphong</h5>
            <p class="card-text">@Model.Mota</p>
        </div>
    </div>

    <div class="text-center mt-3">
        <button type="submit" class="btn btn-primary">Xác nhận đặt phòng</button>
        <a asp-action="Index" class="btn btn-secondary ms-2 px-4">Quay lại</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
