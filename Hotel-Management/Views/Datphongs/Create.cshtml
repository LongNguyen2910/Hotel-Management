@model Hotel_Management.Models.Phong

@{
    ViewData["Title"] = "Thêm phòng";
    var devices = (IEnumerable<dynamic>?)ViewBag.Thietbis ?? Enumerable.Empty<dynamic>();
}

<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Thêm phòng</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label class="form-label">Mã phòng</label>
                    <input asp-for="Maphong" class="form-control" />
                    <span asp-validation-for="Maphong" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Tên phòng</label>
                    <input asp-for="Tenphong" class="form-control" />
                    <span asp-validation-for="Tenphong" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Mã loại phòng</label>
                    <select asp-for="Maloaiphong" class="form-select" asp-items="ViewBag.Maloaiphong">
                        <option value="">-- Chọn loại phòng --</option>
                    </select>
                    <span asp-validation-for="Maloaiphong" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Thiết bị trong phòng (chọn nhiều)</label>
                    <div class="row">
                        @foreach (var d in devices)
                        {
                            <div class="col-md-4 mb-2">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="selectedThietbis" value="@d.Mathietbi" id="tb_@d.Mathietbi" />
                                    <label class="form-check-label" for="tb_@d.Mathietbi">@d.Mathietbi — @d.Tenthietbi</label>
                                </div>
                            </div>
                        }
                    </div>
                    <small class="form-text text-muted">Chọn các thiết bị sẽ được gán cho phòng này.</small>
                </div>

                <div class="mb-3">
                    <label class="form-label">Mô tả</label>
                    <textarea asp-for="Mota" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Mota" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Tình trạng</label>
                    <select asp-for="Tinhtrang" class="form-select">
                        <option value="true">Active</option>
                        <option value="false">Inactive</option>
                    </select>
                    <span asp-validation-for="Tinhtrang" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Lưu</button>
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}