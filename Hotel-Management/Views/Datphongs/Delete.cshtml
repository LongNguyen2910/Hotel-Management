@model Hotel_Management.Models.Phong

@{
    ViewData["Title"] = "Xóa phòng";
}

<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Xóa phòng</h5>
        </div>
        <div class="card-body">
            <h4>Phòng</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Mã phòng</dt>
                <dd class="col-sm-10">@Model.Maphong</dd>

                <dt class="col-sm-2">Tên phòng</dt>
                <dd class="col-sm-10">@Model.Tenphong</dd>

                <dt class="col-sm-2">Mã loại phòng</dt>
                <dd class="col-sm-10">@Model.Maloaiphong</dd>

                <dt class="col-sm-2">Mô tả</dt>
                <dd class="col-sm-10">@Model.Mota</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Maphong" />
                <button type="submit" class="btn btn-danger">Xóa</button>
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            </form>
        </div>
    </div>
</div>