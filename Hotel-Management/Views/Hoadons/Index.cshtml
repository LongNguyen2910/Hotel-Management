@model IEnumerable<Hotel_Management.Models.Hoadon>

@{
    ViewData["Title"] = "Danh sách hoá đơn";
    var currentFilter = ViewData["CurrentFilter"] as string ?? string.Empty;
}

<div class="col-12">
    <div class="card overflow-hidden shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Danh sách hoá đơn</h5>
            <div class="d-flex align-items-center">
                <form asp-action="Index" method="get" class="d-flex me-3">
                    <input name="searchString" value="@currentFilter" class="form-control form-control-sm me-2" placeholder="Tìm kiếm..." />
                    <button type="submit" class="btn btn-sm btn-outline-primary">Tìm</button>
                </form>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-sm align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="text-truncate">Mã hoá đơn</th>
                        <th class="text-truncate">Ngày lập</th>
                        <th class="text-truncate">Ngày thanh toán</th>
                        <th class="text-truncate">Giá phòng</th>
                        <th class="text-truncate">Giá món</th>
                        <th class="text-truncate">Mã khách hàng</th>
                        <th class="text-truncate text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewData["NoResults"] != null)
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                <i class="bi bi-exclamation-circle">Không tìm thấy hoá đơn phù hợp</i>
                            </td>
                        </tr>
                    }
                    else
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Mahoadon</td>
                                <td>@item.Ngaylap</td>
                                <td>@item.Ngaythanhtoan</td>
                                <td>@item.Giaphong</td>
                                <td>@item.Giamon</td>
                                <td>@item.Makhachhang</td>
                                <td class="text-center">
                                    @if (item.Ngaythanhtoan == null)
                                    {
                                        <form asp-controller="Hoadons"
                                              asp-action="ThanhToan"
                                              method="post"
                                              class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="mahoadon" value="@item.Mahoadon" />
                                            <button type="submit" class="btn btn-primary">Thanh toán</button>
                                        </form>
                                    }
                                    <a href="@Url.Action("Delete", "Hoadons", new { id = item.Mahoadon })"
                                       class="btn btn-sm btn-outline-danger">Xóa</a>
                                </td>
                            </tr>
                        }
                </tbody>
            </table>
        </div>
    </div>
</div>
