@model Hotel_Management.Models.Khachhangdatmon

@{
    ViewData["Title"] = "Xoá thông tin";
}

<h1>Xoá thông tin khách hàng</h1>

<h5 class="text-muted">Bạn có chắc chắn muốn xoá thông tin khách hàng này không?</h5>

<div class="border rounded p-4 shadow-sm bg-light">
    <dl class="row">
        <dt class="col-sm-2 fw-bold text-secondary">Họ tên</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Soluong)</dd>

        <dt class="col-sm-2 fw-bold text-secondary">Quốc tịch</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.MakhachhangNavigation.Makhachhang)</dd>

        <dt class="col-sm-2 fw-bold text-secondary">CCCD</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.MamonNavigation.Mamon)</dd>
    </dl>
</div>

<form asp-action="Delete" class="mt-4">
    <input type="hidden" asp-for="Makhachhang" />
    <input type="hidden" asp-for="Mamon" />
    <input type="hidden" asp-for="Ngaydat" />
    <button type="submit" class="btn btn-danger px-4 me-2">Xoá</button>
    <a asp-action="Index" class="btn btn-secondary px-4">Quay lại</a>
</form>
