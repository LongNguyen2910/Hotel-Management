@model Hotel_Management.Helpers.PaginatedList<Hotel_Management.Models.Khachhang>

@{
    ViewData["Title"] = "Thông tin khách hàng";
    var currentFilter = ViewData["CurrentFilter"] as string ?? string.Empty;
}

<div class="col-12">
    <div class="card overflow-hidden">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Danh sách khách hàng</h5>
            <div class="d-flex align-items-center">
                <form asp-action="Index" method="get" class="d-flex me-3">
                    <input name="searchString" value="@currentFilter" class="form-control form-control-sm me-2" placeholder="Tìm kiếm..." />
                    <button type="submit" class="btn btn-sm btn-outline-primary">Tìm</button>
                </form>
                <a asp-controller="Khachhangs" asp-action="Create" class="btn btn-sm btn-primary">Thêm khách hàng</a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th class="text-truncate">Mã khách hàng</th>
                        <th class="text-truncate">Họ tên</th>
                        <th class="text-truncate">Quốc tịch</th>
                        <th class="text-truncate">Căn cước công dân</th>
                        <th class="text-truncate">Số điện thoại</th>
                        <th class="text-truncate">Hộ chiếu</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewData["NoResults"] != null)
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                <i class="bi bi-exclamation-circle"></i> Không tìm thấy khách hàng phù hợp
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Makhachhang</td>
                                <td>@item.Hoten</td>
                                <td>@item.Quoctich</td>
                                <td>@item.Cccd</td>
                                <td>@item.Sdt</td>
                                <td>@item.Hochieu</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Makhachhang" class="btn btn-sm btn-primary me-2">Sửa</a>
                                    <a asp-action="Delete" asp-route-id="@item.Makhachhang" class="btn btn-sm btn-outline-danger">Xóa</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>


            </table>
        </div>
    </div>
</div>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<div class="mt-3">
    <a asp-action="Index"
       asp-route-pageNumber="@(Model.PageIndex - 1)"
       asp-route-searchString="@ViewData["CurrentFilter"]"
       class="btn btn-outline-primary @prevDisabled">
        <i class="bx bx-chevron-left"></i> Trước
    </a>
    <a asp-action="Index"
       asp-route-pageNumber="@(Model.PageIndex + 1)"
       asp-route-searchString="@ViewData["CurrentFilter"]"
       class="btn btn-outline-primary @nextDisabled">
        Sau <i class="bx bx-chevron-right"></i>
    </a>
    <span class="ms-2 text-muted">
        Trang @Model.PageIndex / @Model.TotalPages
    </span>
</div>