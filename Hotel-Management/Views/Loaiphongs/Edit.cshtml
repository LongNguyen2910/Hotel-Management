@model Hotel_Management.Models.Loaiphong

@{
    ViewData["Title"] = "Sửa loại phòng";
}

<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Sửa loại phòng</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label class="form-label">Mã loại phòng</label>
                    <input asp-for="Maloaiphong" class="form-control" readonly />
                    <span asp-validation-for="Maloaiphong" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Tên loại phòng</label>
                    <input asp-for="Tenloaiphong" class="form-control" />
                    <span asp-validation-for="Tenloaiphong" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Sức chứa</label>
                    <input asp-for="Succhua" type="number" min="0" class="form-control" />
                    <span asp-validation-for="Succhua" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Giá</label>
                    <input asp-for="Gia" class="form-control" />
                    <span asp-validation-for="Gia" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Lưu</button>
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}