@model Hotel_Management.Helpers.PaginatedList<Hotel_Management.Models.Loaiphong>

@{
    var currentFilter = ViewData["CurrentFilter"] as string ?? string.Empty;
}

<div class="col-12">
    <div class="card overflow-hidden">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Loại phòng</h5>
            <div class="d-flex align-items-center">
                <form asp-action="Index" method="get" class="d-flex me-3">
                    <input name="searchString" value="@currentFilter" class="form-control form-control-sm me-2" placeholder="Tìm kiếm..." />
                    <button type="submit" class="btn btn-sm btn-outline-primary">Tìm</button>
                    @if (!string.IsNullOrWhiteSpace(currentFilter))
                    {
                        <a asp-action="Index" class="btn btn-sm btn-link ms-2">Xóa</a>
                    }
                </form>
                @if (User.IsInRole("Admin") || User.IsInRole("Quản lý khách sạn"))
                        {
                <a asp-controller="Loaiphongs" asp-action="Create" class="btn btn-sm btn-primary">Thêm loại phòng</a>
                        }
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th class="text-truncate">Mã</th>
                        <th class="text-truncate">Tên loại phòng</th>
                        <th class="text-truncate">Sức chứa</th>
                        <th class="text-truncate">Giá</th>
                        <th class="text-truncate">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
@foreach (var item in Model)
{
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <div>
                                    <h6 class="mb-0 text-truncate">@item.Maloaiphong</h6>
                                </div>
                            </div>
                        </td>
                        <td class="text-truncate">@item.Tenloaiphong</td>
                        <td class="text-truncate">@item.Succhua</td>
                        <td class="text-truncate">@(item.Gia.HasValue ? item.Gia.Value.ToString("C") : "")</td>
                        <td>
    @if (User.IsInRole("Admin") || User.IsInRole("Quản lý khách sạn"))
    {
                            <a asp-controller="Loaiphongs" asp-action="Edit" asp-route-id="@item.Maloaiphong" class="btn btn-sm btn-outline-primary me-2">Sửa</a>
                            <a asp-controller="Loaiphongs" asp-action="Delete" asp-route-id="@item.Maloaiphong" class="btn btn-sm btn-outline-danger">Xóa</a>
    }
                        </td>
                    </tr>
}
                </tbody>
            </table>
        </div>
    </div>
</div>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<div class="mt-3">
    <a asp-action="Index"
       asp-route-pageNumber="@(Model.PageIndex - 1)"
       asp-route-searchString="@ViewData["CurrentFilter"]"
       class="btn btn-outline-primary @prevDisabled">
        <i class="bx bx-chevron-left"></i> Trước
    </a>
    <a asp-action="Index"
       asp-route-pageNumber="@(Model.PageIndex + 1)"
       asp-route-searchString="@ViewData["CurrentFilter"]"
       class="btn btn-outline-primary @nextDisabled">
        Sau <i class="bx bx-chevron-right"></i>
    </a>
    <span class="ms-2 text-muted">
        Trang @Model.PageIndex / @Model.TotalPages
    </span>
</div>