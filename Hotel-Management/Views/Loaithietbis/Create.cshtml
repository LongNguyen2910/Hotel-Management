@model Hotel_Management.Models.Loaithietbi

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center mb-4">Thêm loại thiết bị</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Maloaithietbi" class="form-label">Mã loại thiết bị</label>
                <input asp-for="Maloaithietbi" class="form-control" placeholder="Nhập mã loại thiết bị" />
                <span asp-validation-for="Maloaithietbi" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Tenloaithietbi" class="form-label">Tên loại thiết bị</label>
                <input asp-for="Tenloaithietbi" class="form-control" placeholder="Nhập tên loại thiết bị"/>
                <span asp-validation-for="Tenloaithietbi" class="text-danger"></span>
            </div>

            <div class="form-group text-center mt-4">
                <button type="submit" class="btn btn-primary px-4">Lưu</button>
                <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Quay lại</a>
            </div>
        </form>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />
