@model Hotel_Management.Models.Loaithietbi

@{
    ViewData["Title"] = "Delete";
}

<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Xóa loại thiết bị</h5>
        </div>
        <div class="card-body">
            <h6>Bạn có chắc muốn xóa loại thiết bị này?</h6>

            <dl class="row">
                <dt class="col-sm-3">Mã loại</dt>
                <dd class="col-sm-9">@Model?.Maloaithietbi</dd>

                <dt class="col-sm-3">Tên loại</dt>
                <dd class="col-sm-9">@Model?.Tenloaithietbi</dd>
            </dl>

            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Maloaithietbi" />
                <button type="submit" class="btn btn-danger">Xóa</button>
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            </form>
        </div>
    </div>
</div>