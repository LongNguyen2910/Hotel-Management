@model Hotel_Management.Helpers.PaginatedList<Hotel_Management.Models.Loaithietbi>

@{
    ViewData["Title"] = "Danh sách loại thiết bị";
    var currentFilter = ViewData["CurrentFilter"] as string ?? string.Empty;
}

<div class="col-12">
    <div class="card overflow-hidden">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Loại thiết bị</h5>
            <div class="d-flex align-items-center">
                <form id="search-form" asp-action="Index" method="get" class="d-flex me-3" autocomplete="off">
                    <input id="searchString" name="searchString" value="@currentFilter" class="form-control form-control-sm me-2" placeholder="Tìm kiếm..." />
                    <button type="submit" class="btn btn-sm btn-outline-primary">Tìm</button>
                    @if (!string.IsNullOrWhiteSpace(currentFilter))
                    {
                        <button type="button" id="serverClear" class="btn btn-sm btn-link ms-2">Xóa</button>
                    }
                </form>
                <a asp-controller="Loaithietbis" asp-action="Create" class="btn btn-sm btn-primary">Thêm loại thiết bị</a>
            </div>
        </div>

        <div class="table-responsive" id="loaiThietBiList">
            @* Render the shared partial (table + pager). Ensures initial page and AJAX updates use the same markup *@
            @await Html.PartialAsync("LoaiThietBisList", Model)
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/vendor/libs/jquery/jquery.js"></script>
    <script>
        (function ($) {
            const $container = $('#loaiThietBiList');
            const baseUrl = '@Url.Action("Index", "Loaithietbis")';
            const $searchForm = $('#search-form');

            function ClearButton(keyword) {
                let $btn = $('#btnClear');
                if (keyword && !$btn.length) {
                    $btn = $('<button type="button" id="btnClear" class="btn btn-sm btn-outline-danger ms-2">Xóa</button>');
                    $searchForm.append($btn);
                    $btn.on('click', function () {
                        $('#searchString').val('');
                        loadAjax(1, '');
                    });
                } else if (!keyword && $btn.length) {
                    $btn.remove();
                }
            }

            function showLoading() { $container.css('opacity', '.5'); }
            function hideLoading() { $container.css('opacity', '1'); }

            function loadAjax(page, keyword) {
                showLoading();
                $.ajax({
                    url: baseUrl,
                    method: 'GET',
                    data: { pageNumber: page, searchString: keyword },
                    headers: { 'X-Requested-With': 'XMLHttpRequest' },
                    success: function (response) {
                        $container.html(response);
                        ClearButton(keyword);
                    }
                }).always(function () { hideLoading(); });
            }

            $('body').on('click', 'a.ajax-page', function (e) {
                e.preventDefault();
                if ($(this).hasClass('disabled')) return;
                const page = $(this).data('page');
                const keyword = $('#searchString').val().trim();
                loadAjax(page, keyword);
            });

            $searchForm.on('submit', function (e) {
                e.preventDefault();
                const keyword = $('#searchString').val().trim();
                loadAjax(1, keyword);
            });

            $('body').on('click', '#serverClear', function () {
                $('#searchString').val('');
                loadAjax(1, '');
            });

            ClearButton($('#searchString').val().trim());
        })(jQuery);
    </script>
}