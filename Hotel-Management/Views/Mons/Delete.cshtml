@model Hotel_Management.Models.Mon

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}

<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Xóa món @Html.DisplayFor(model => model.Tenmon)</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Mã món</dt>
                <dd class="col-sm-9">@Model?.Mamon</dd>

                <dt class="col-sm-3">Tên món</dt>
                <dd class="col-sm-9">@Model?.Tenmon</dd>

                <dt class="col-sm-3">Giá</dt>
                <dd class="col-sm-9">@Model?.Gia</dd>
            </dl>

            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Mamon" />
                <button type="submit" class="btn btn-danger">Xóa</button>
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            </form>
        </div>
    </div>
</div>
