@model Hotel_Management.Models.Ncccungcapnguyenlieu

@{
    ViewData["Title"] = "Thêm nhà cung cấp thiết bị";
}

<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Thêm nhà cung cấp nguyên liệu</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Mancc" class="form-label"></label>
                    <select asp-for="Mancc" class="form-select" asp-items="ViewBag.Mancc">
                        <option value="">-- Chọn nhà cung cấp --</option>
                    </select>
                    <span asp-validation-for="Mancc" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Mã nguyên liệu</label>
                    <input asp-for="Manguyenlieu" class="form-control" />
                    <span asp-validation-for="Manguyenlieu" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Tên nguyên liệu</label>
                    <input asp-for="Tennguyenlieu" class="form-control" />
                    <span asp-validation-for="Tennguyenlieu" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Ngày nhập</label>
                    <input asp-for="Ngaynhap" type="date" class="form-control" />
                    <span asp-validation-for="Ngaynhap" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Hạn sử dụng</label>
                    <input asp-for="Hansudung" type="date" class="form-control" />
                    <span asp-validation-for="Hansudung" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Ngày sản xuất</label>
                    <input asp-for="Ngaysanxuat" type="date" class="form-control" />
                    <span asp-validation-for="Ngaysanxuat" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Số lượng</label>
                    <input asp-for="Luong" class="form-control" />
                    <span asp-validation-for="Luong" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Tiền nguyên liệu</label>
                    <input asp-for="Tiennguyenlieu" class="form-control" />
                    <span asp-validation-for="Tiennguyenlieu" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Lưu</button>
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            </form>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />