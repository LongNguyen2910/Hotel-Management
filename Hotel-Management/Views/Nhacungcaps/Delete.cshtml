@model Hotel_Management.Models.Nhacungcap

@{
    ViewData["Title"] = "Xóa nhà cung cấp";
}

<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Xóa nhà cung cấp</h5>
        </div>
        <div class="card-body">
            <h6>Bạn có chắc muốn xóa nhà cung cấp này?</h6>

            <dl class="row">
                <dt class="col-sm-3">Mã nhà cung cấp</dt>
                <dd class="col-sm-9">@Model?.Manhacungcap</dd>

                <dt class="col-sm-3">Tên nhà cung cấp</dt>
                <dd class="col-sm-9">@Model?.Tennhacungcap</dd>

                <dt class="col-sm-3">SĐT</dt>
                <dd class="col-sm-9">@Model?.Sodienthoai</dd>
            </dl>

            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Manhacungcap" />
                <button type="submit" class="btn btn-danger">Xóa</button>
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            </form>
        </div>
    </div>
</div>