@model Hotel_Management.Helpers.PaginatedList<Hotel_Management.Models.Nhacungcap>

@{
    ViewData["Title"] = "Danh sách nhà cung cấp";
    var currentFilter = ViewData["CurrentFilter"] as string ?? string.Empty;
}

<div class="col-12">
    <div class="card overflow-hidden">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Nhà cung cấp</h5>
            <div class="d-flex align-items-center">
                <form id="search-form" asp-action="Index" method="get" class="d-flex me-3" autocomplete="off">
                    <input id="searchString" name="searchString" value="@currentFilter" class="form-control form-control-sm me-2" placeholder="Tìm kiếm..." />
                    <button type="submit" id="btnSearch" class="btn btn-sm btn-outline-primary">Tìm</button>
                </form>
                @if (User.IsInRole("Admin") || User.IsInRole("Quản lý khách sạn") || User.IsInRole("Kế toán"))
                {
                    <a asp-controller="Nhacungcaps" asp-action="Create" class="btn btn-sm btn-primary">Thêm nhà cung cấp</a>
                }
            </div>
        </div>

        <div class="table-responsive" id="Nhacungcaps-container">
            @await Html.PartialAsync("_NhacungcapsList", Model)
        </div>
    </div>
</div>

@* Add ajax *@
@section Scripts {
    <script src="~/vendor/libs/jquery/jquery.js"></script>
    <script>
        (function ($) {

            const $container = $('#Nhacungcaps-container');
            const baseUrl = '@Url.Action("Index", "Nhacungcaps")';

            function ClearButton(keyword) {
                const $form = $('#search-form');
                let $btn = $('#btnClear');
                if (keyword && !$btn.length) {
                    $btn = $('<button type="button" id="btnClear" class="btn btn-sm btn-outline-danger ms-2">Xóa</button>');
                    $form.append($btn);
                    $btn.on('click', function () {
                        $('#searchString').val('');
                        loadAjax(1, '');
                    });
                } else if (!keyword && $btn.length) {
                    $btn.remove();
                }
            }

            function showLoading() {
                $container.css('opacity', '.5');
            }
            function hideLoading() {
                $container.css('opacity', '1');
            }

            function loadAjax(page, keyword) {
                showLoading();
                $.ajax({
                    url: baseUrl,
                    method: 'GET',
                    data: {
                        pageNumber: page,
                        searchString: keyword
                    },
                    success: function (response) {
                        $container.html(response);
                        ClearButton(keyword);
                    },
                    headers: { 'X-Requested-With': 'XMLHttpRequest' }
                })
                .always(function () {
                    hideLoading();
                });
            }

            // Pagination click (delegation)
            $('body').on('click', 'a.ajax-page', function (e) {
                e.preventDefault();
                if ($(this).hasClass('disabled')) return;
                const page = $(this).data('page');
                const keyword = $('#searchString').val().trim();
                loadAjax(page, keyword);
            });

            // Search submit
            $('#search-form').on('submit', function (e) {
                e.preventDefault();
                const keyword = $('#searchString').val().trim();
                loadAjax(1, keyword); // reset to page 1
            });

            // Clear filter
            $('#btnClear').on('click', function () {
                $('#searchString').val('');
                loadAjax(1, '');
            });
        })(jQuery);
    </script>
}
