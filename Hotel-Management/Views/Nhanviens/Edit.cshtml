@model Hotel_Management.Models.Nhanvien

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}

<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Sửa thông tin nhân viên @Html.DisplayFor(model => model.Hoten)</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Manv" />
                <div class="mb-3">
                    <label class="form-label">Họ tên</label>
                    <input asp-for="Hoten" class="form-control" />
                    <span asp-validation-for="Hoten" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Tình trạng</label>
                    <select asp-for="Gioitinh" class="form-select">
                        <option value="Nam">Nam</option>
                        <option value="Nữ">Nữ</option>
                    </select>
                    <span asp-validation-for="Gioitinh" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="control-label">Ngày sinh</label>
                    <input asp-for="Ngaysinh" class="form-control" />
                    <span asp-validation-for="Ngaysinh" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="control-label">Số điện thoại</label>
                    <input asp-for="Sodienthoai" class="form-control" />
                    <span asp-validation-for="Sodienthoai" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="control-label">CCCD</label>
                    <input asp-for="Cccd" class="form-control" />
                    <span asp-validation-for="Cccd" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="control-label">Ngày vào làm</label>
                    <input asp-for="Ngayvaolam" class="form-control" />
                    <span asp-validation-for="Ngayvaolam" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="control-label">Trạng thái</label>
                    <select asp-for="Trangthai" class="form-control" asp-items="ViewBag.Trangthai"></select>
                </div>
                <div class="mb-3">
                    <label class="control-label">Tên bộ phận</label>
                    <select asp-for="Mabophan" class="form-control" asp-items="ViewBag.Mabophan"></select>
                </div>
                <div class="mb-3">
                    <label class="control-label">Tên chức vụ</label>
                    <select asp-for="Tenchucvu" class="form-control" asp-items="ViewBag.Tenchucvu"></select>
                </div>
                <div class="mb-3">
                    <div>
                        @{
                            // Lấy danh sách các ca hiện tại của nhân viên để checked
                            var currentShiftIds = Model.Nhanvienlamcas.Select(x => x.Macalamviec).ToHashSet();
                        }
                        @if (ViewBag.AllCalamviecs != null)
                        {
                            foreach (var ca in (List<Hotel_Management.Models.Calamviec>)ViewBag.AllCalamviecs)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox"
                                           name="selectedCalamviec"
                                           value="@ca.Macalamviec"
                                           id="ca_@ca.Macalamviec"
                                           @(currentShiftIds.Contains(ca.Macalamviec) ? "checked" : "")>
                                    <label class="form-check-label" for="ca_@ca.Macalamviec">
                                        @ca.Macalamviec (@ca.Thoigianbatdau - @ca.Thoigianketthuc)
                                    </label>
                                </div>
                            }
                        }
                    </div>
                    <div class="mb-6">
                        <label for="formFile" class="form-label">Ảnh nhân viên</label>
                        <input class="form-control" type="file" id="formFile" name="AnhFile" />
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Lưu</button>
                <a asp-action="Index" class="btn btn-secondary">Huỷ</a>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}