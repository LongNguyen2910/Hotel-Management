@model Hotel_Management.Helpers.PaginatedList<Hotel_Management.Models.Nhanvien>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}

<div class="col-12">
    <div class="card overflow-hidden">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Danh sách nhân viên</h5>
            <div class="d-flex align-items-center">
                <form asp-action="Index" method="get" class="d-flex me-3">
                    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control form-control-sm me-2" placeholder="Tìm theo tên..." />
                    <button type="submit" class="btn btn-sm btn-outline-primary">Tìm</button>

                    @if (ViewData["CurrentFilter"] != null)
                    {
                        <a asp-action="Index" class="btn btn-sm btn-link ms-2">Xóa</a>
                    }
                </form>
                <a asp-controller="Nhanviens" asp-action="Create" class="btn btn-sm btn-primary">Thêm nhân viên</a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th class="text-truncate">Họ và tên</th>
                        <th class="text-truncate">Giới tính</th>
                        <th class="text-truncate">Ngày sinh</th>
                        <th class="text-truncate">Số điện thoại</th>
                        <th class="text-truncate">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="clickable-row" data-href="@Url.Action("Details", new { id = item.Manv })" style="cursor: pointer;">
                            <td>
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(item.Anhnv))
                                    {
                                        <img src="@Url.Action("GetImage", "Nhanviens", new { id = item.Manv })"
                                             alt="@item.Hoten"
                                             class="rounded"
                                             style="width: 50px; height: 50px; object-fit: cover; margin-right: 10px;" />
                                    }
                                    else
                                    {
                                        <div class="rounded"
                                             style="width: 50px; height: 50px; background-color: #eee; margin-right: 10px;"></div>
                                    }
                                    <div>
                                        <h6 class="mb-0 text-truncate">@item.Hoten</h6>
                                    </div>
                                </div>
                            </td>
                            <td class="text-truncate">@item.Gioitinh</td>
                            <td class="text-truncate">@item.Ngaysinh</td>
                            <td class="text-truncate">@item.Sodienthoai</td>
                            <td>
                                <a asp-controller="Nhanviens" asp-action="Edit" asp-route-id="@item.Manv" class="btn btn-sm btn-outline-primary">Sửa</a>
                                <a asp-controller="Nhanviens" asp-action="Delete" asp-route-id="@item.Manv" class="btn btn-sm btn-outline-danger">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<div class="mt-3">
    <a asp-action="Index"
       asp-route-pageNumber="@(Model.PageIndex - 1)"
       asp-route-searchString="@ViewData["CurrentFilter"]"
       class="btn btn-outline-primary @prevDisabled">
        <i class="bx bx-chevron-left"></i> Trước
    </a>
    <a asp-action="Index"
       asp-route-pageNumber="@(Model.PageIndex + 1)"
       asp-route-searchString="@ViewData["CurrentFilter"]"
       class="btn btn-outline-primary @nextDisabled">
        Sau <i class="bx bx-chevron-right"></i>
    </a>
    <span class="ms-2 text-muted">
        Trang @Model.PageIndex / @Model.TotalPages
    </span>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('.clickable-row').forEach(function(row) {
            row.addEventListener('click', function(e) {
                // Không kích hoạt nếu click vào Edit/Delete
                if (e.target.tagName !== 'A') {
                    window.location.href = this.dataset.href;
                }
            });
        });
    });
</script>
