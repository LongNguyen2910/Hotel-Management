@model Hotel_Management.Helpers.PaginatedList<Hotel_Management.Models.Nhanvien>

<div class="table-responsive">
    <table class="table table-sm">
        <thead>
            <tr>
                <th class="text-truncate">Họ và tên</th>
                <th class="text-truncate">Giới tính</th>
                <th class="text-truncate">Ngày sinh</th>
                <th class="text-truncate">Số điện thoại</th>
                <th class="text-truncate">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="clickable-row" data-href="@Url.Action("Details", new { id = item.Manv })" style="cursor: pointer;">
                    <td>
                        <div class="d-flex align-items-center">
                            @if (!string.IsNullOrEmpty(item.AnhNhanVien))
                            {
                                <img src="@Url.Action("GetImage", "Nhanviens", new { id = item.Manv })"
                                     alt="@item.Hoten"
                                     class="rounded"
                                     style="width: 50px; height: 50px; object-fit: cover; margin-right: 10px;" />
                            }
                            else
                            {
                                <div class="rounded"
                                     style="width: 50px; height: 50px; background-color: #eee; margin-right: 10px;"></div>
                            }
                            <div>
                                <h6 class="mb-0 text-truncate">@item.Hoten</h6>
                            </div>
                        </div>
                    </td>
                    <td class="text-truncate">@item.Gioitinh</td>
                    <td class="text-truncate">@item.Ngaysinh</td>
                    <td class="text-truncate">@item.Sodienthoai</td>
                    <td>
                    @if(User.IsInRole("Admin") || User.IsInRole("Quản lý nhân sự") || User.IsInRole("Quản lý khách sạn"))    {
                            <a asp-controller="Nhanviens" asp-action="Edit" asp-route-id="@item.Manv" class="btn btn-sm btn-outline-primary ajax-action">Sửa</a>
                            <a asp-controller="Nhanviens" asp-action="Delete" asp-route-id="@item.Manv" class="btn btn-sm btn-outline-danger ajax-action">Xóa</a>
                    }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<div class="mt-3">
    <a asp-action="Index"
       asp-route-pageNumber="@(Model.PageIndex - 1)"
       asp-route-searchString="@ViewData["CurrentFilter"]"
       class="btn btn-outline-primary @prevDisabled ajax-link">
        <i class="bx bx-chevron-left"></i> Trước
    </a>
    <a asp-action="Index"
       asp-route-pageNumber="@(Model.PageIndex + 1)"
       asp-route-searchString="@ViewData["CurrentFilter"]"
       class="btn btn-outline-primary @nextDisabled ajax-link">
        Sau <i class="bx bx-chevron-right"></i>
    </a>
    <span class="ms-2 text-muted">
        Trang @Model.PageIndex / @Model.TotalPages
    </span>
</div>