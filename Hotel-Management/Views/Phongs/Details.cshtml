@model Hotel_Management.Models.Phong

@{
    ViewData["Title"] = "Thông tin phòng";
}

<div class="row justify-content-center">
    <div class="col-xl-8 col-lg-9">
        <div class="card">
            <!-- Ảnh phía trên -->
            <img class="card-img-top"
                 src="@Url.Action("GetImage", "Phongs", new { id = Model.Maphong })"
                 alt="Ảnh phòng @Model.Maphong" />

            <!-- Thông tin phía dưới -->
            <div class="card-body">
                <div class="d-flex align-items-start justify-content-between mb-3">
                    <div>
                        <h4 class="mb-1">@Model.Tenphong</h4>
                        <div class="text-muted">Mã phòng: <strong>@Model.Maphong</strong></div>
                    </div>
                    <div>
                        @if (Model.Tinhtrang)
                        {
                            <div class="text-truncate">
                                <span class="badge bg-label-success rounded-pill">Sẵn sàng</span>
                            </div>
                        }
                        else
                        {
                            <div class="text-truncate">
                                <span class="badge bg-label-secondary rounded-pill">Không sẵn sàng</span>
                            </div>  
                        }
                    </div>
                </div>

                <hr />

                <dl class="row mb-0">
                    <dt class="col-sm-4">Loại phòng</dt>
                    <dd class="col-sm-8">@Model.MaloaiphongNavigation?.Tenloaiphong (@Model.Maloaiphong)</dd>

                    <dt class="col-sm-4">Mô tả</dt>
                    <dd class="col-sm-8">@Model.Mota</dd>

                </dl>

                <div class="mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Maphong" class="btn btn-primary me-2">Sửa</a>
                    <a asp-action="Index" class="btn btn-outline-secondary">Quay lại</a>
                </div>
            </div>
        </div>
    </div>
</div>