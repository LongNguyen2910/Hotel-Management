@model IEnumerable<Hotel_Management.Models.Phong>

@{
    ViewData["Title"] = "Index";
    var currentFilter = ViewData["CurrentFilter"] as string ?? string.Empty;
}

<div class="col-12">
    <div class="card overflow-hidden">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Danh sách phòng</h5>
            <div class="d-flex align-items-center">
                <form asp-action="Index" method="get" class="d-flex me-3">
                    <input name="searchString" value="@currentFilter" class="form-control form-control-sm me-2" placeholder="Tìm theo mã thiết bị..." />
                    <button type="submit" class="btn btn-sm btn-outline-primary">Tìm</button>
                    @if (!string.IsNullOrWhiteSpace(currentFilter))
                    {
                        <a asp-action="Index" class="btn btn-sm btn-link ms-2">Xóa</a>
                    }
                </form>
                <a asp-controller="Phongs" asp-action="Create" class="btn btn-sm btn-primary">Thêm thiết bị</a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th class="text-truncate">Loại phòng</th>
                        <th class="text-truncate">Tên phòng</th>
                        <th class="text-truncate">Tình trạng</th>
                        <th class="text-truncate">Mô tả</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><h6 class="mb-0 text-truncate">@item.MaloaiphongNavigation.Tenloaiphong</h6></td>
                            <td><h6 class="mb-0 text-truncate">@item.Tenphong</h6></td>
                            <td class="text-truncate">
                                @if (item.Tinhtrang == true)
                                {
                                    <span class="badge bg-label-success rounded-pill">Sẵn sàng</span>
                                }
                                else
                                {
                                    <span class="badge bg-label-secondary rounded-pill">Không sẵn sàng</span>
                                }
                            </td>
                            <td>
                                <a asp-controller="Phongs" asp-action="Delete" asp-route-id="@item.Tenphong" class="btn btn-sm btn-outline-danger">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
