@model Hotel_Management.Helpers.PaginatedList<Hotel_Management.Models.Phong>

@{
    ViewData["Title"] = "Index";
    var currentFilter = ViewData["CurrentFilter"] as string ?? string.Empty;
}

<div class="col-12">
    <div class="card overflow-hidden">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Danh sách phòng</h5>
            <div class="d-flex align-items-center">
                <form id="search-form" asp-action="Index" method="get" class="d-flex me-3" autocomplete="off">
                    <input id="searchString" value="@currentFilter" name="searchString"
                           class="form-control form-control-sm me-2" placeholder="Tìm theo mã phòng..." />
                    <button type="submit" id="btnSearch" class="btn btn-sm btn-outline-primary">Tìm</button>
                </form>
                <a asp-controller="Phongs" asp-action="Create" class="btn btn-sm btn-primary">Thêm phòng</a>
            </div>
        </div>
        <div class="table-responsive" id="phongs-container">
            @await Html.PartialAsync("_PhongsList", Model)
        </div>
    </div>
</div>

<!-- Delete confirm card (Bootstrap modal) -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteLabel">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            @if (TempData["DeletePhongError"] != null)
            {
                <div class="modal-body">
                    <div class="alert alert-warning mb-0">
                        @TempData["DeletePhongError"]
                    </div>
                </div>
            } else
            {
                <div class="modal-body">
                    <div class="alert alert-warning mb-0">
                        Bạn có chắc chắn muốn xóa phòng <strong id="delete-item-name"></strong>
                        (<code id="delete-item-id"></code>) không?
                    </div>
                </div>
            }
            
            <div class="modal-footer">
                <form id="deleteForm" method="post" asp-controller="Phongs" asp-action="Delete" class="m-0">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="delete-id" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    @if (TempData["DeletePhongError"] == null)
                    {
                    <button type="submit" class="btn btn-danger">Xóa</button>
                    }
                    
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Populate modal with item info, wire id into the POST form
        const confirmModal = document.getElementById('confirmDeleteModal');
        if (confirmModal) {
            confirmModal.addEventListener('show.bs.modal', (event) => {
                const button = event.relatedTarget;
                if (!button) return;

                const id = button.getAttribute('data-id');
                const name = button.getAttribute('data-name') || id;

                document.getElementById('delete-id').value = id;
                document.getElementById('delete-item-id').textContent = id;
                document.getElementById('delete-item-name').textContent = name;
            });
        }
    </script>
    <script src="~/vendor/libs/jquery/jquery.js"></script>
    <script>
        (function ($) {

            const $container = $('div#phongs-container');
            const baseUrl = '@Url.Action("Index", "Phongs")';

            function ClearButton(keyword) {
                const $form = $('#search-form');
                let $btn = $('#btnClear');
                if (keyword && !$btn.length) {
                    $btn = $('<button type="button" id="btnClear" class="btn btn-sm btn-outline-danger ms-2">Xóa</button>');
                    $form.append($btn);
                    $btn.on('click', function () {
                        $('#searchString').val('');
                        loadAjax(1, '');
                    });
                } else if (!keyword && $btn.length) {
                    $btn.remove();
                }
            }

            function showLoading() {
                $container.css('opacity', '.5');
            }
            function hideLoading() {
                $container.css('opacity', '1');
            }

            function loadAjax(page, keyword) {
                showLoading();
                $.ajax({
                    url: baseUrl,
                    method: 'GET',
                    data: {
                        pageNumber: page,
                        searchString: keyword
                    },
                    success: function (response) {
                        $container.html(response);
                        ClearButton(keyword);
                    },
                    headers: { 'X-Requested-With': 'XMLHttpRequest' }
                })
                .always(function () {
                    hideLoading();
                });
            }

            // Pagination click (delegation)
            $('body').on('click', 'a.ajax-page', function (e) {
                e.preventDefault();
                if ($(this).hasClass('disabled')) return;
                const page = $(this).data('page');
                const keyword = $('#searchString').val().trim();
                loadAjax(page, keyword);
            });

            // Search submit
            $('#search-form').on('submit', function (e) {
                e.preventDefault();
                const keyword = $('#searchString').val().trim();
                loadAjax(1, keyword); // reset to page 1
            });

            // Clear filter
            $('#btnClear').on('click', function () {
                $('#searchString').val('');
                loadAjax(1, '');
            });


        })(jQuery);
    </script>
}