@model Hotel_Management.Helpers.PaginatedList<Hotel_Management.Models.Loaithietbi>

<table class="table table-sm">
    <thead>
        <tr>
            <th class="text-truncate">Mã loại thiết bị</th>
            <th class="text-truncate">Tên loại thiết bị</th>
            <th class="text-truncate">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-truncate">@item.Maloaithietbi</td>
                <td class="text-truncate">@item.Tenloaithietbi</td>
                <td>
                    <a asp-controller="Loaithietbis" asp-action="Edit" asp-route-id="@item.Maloaithietbi" class="btn btn-sm btn-outline-primary">Sửa</a>
                    <a asp-controller="Loaithietbis" asp-action="Delete" asp-route-id="@item.Maloaithietbi" class="btn btn-sm btn-outline-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage;
    var nextDisabled = !Model.HasNextPage;
}

<div class="mt-2 d-flex align-items-center card-footer">
    <a href="#"
       class="btn btn-outline-primary me-2 ajax-page @(prevDisabled ? "disabled" : "")"
       data-page="@(Model.PageIndex - 1)"
       @(prevDisabled ? "aria-disabled=true" : "")>
        <i class="bx bx-chevron-left"></i> Trước
    </a>
    <a href="#"
       class="btn btn-outline-primary ajax-page @(nextDisabled ? "disabled" : "")"
       data-page="@(Model.PageIndex + 1)"
       @(nextDisabled ? "aria-disabled=true" : "")>
        Sau <i class="bx bx-chevron-right"></i>
    </a>
    <span class="ms-3 text-muted">
        Trang @Model.PageIndex / @Model.TotalPages
    </span>
</div>