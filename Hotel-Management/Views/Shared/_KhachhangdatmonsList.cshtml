@model Hotel_Management.Helpers.PaginatedList<Hotel_Management.Models.Khachhangdatmon>
<table class="table table-sm">
    <thead>
        <tr>
            <th class="text-truncate">Mã khách hàng</th>
            <th class="text-truncate">Số lượng</th>
            <th class="text-truncate">Mã món</th>
            <th class="text-truncate">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewData["NoResults"] != null)
        {
            <tr>
                <td colspan="7" class="text-center text-muted py-4">
                    <i class="bi bi-exclamation-circle"></i> Không tìm thấy khách hàng phù hợp
                </td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Makhachhang</td>
                    <td>@item.Soluong</td>
                    <td>@item.Mamon</td>
                    <td>
                        <a asp-action="Edit" asp-route-makhachhang="@item.Makhachhang" asp-route-mamon="@item.Mamon" asp-route-ngaydat="@item.Ngaydat.ToString("o")" class="btn btn-sm btn-primary me-2">Sửa</a>
                        <a asp-action="Delete" asp-route-makhachhang="@item.Makhachhang" asp-route-mamon="@item.Mamon" asp-route-ngaydat="@item.Ngaydat.ToString("o")" class="btn btn-sm btn-outline-danger">Xóa</a>
                    </td>
                </tr>
            }
        }
    </tbody>


</table>

@{
    var prevDisabled = !Model.HasPreviousPage;
    var nextDisabled = !Model.HasNextPage;
}

<div class="mt-2 d-flex align-items-center card-footer">
    <a href="#"
       class="btn btn-outline-primary me-2 ajax-page @(prevDisabled ? "disabled" : "")"
       data-page="@(Model.PageIndex - 1)"
       @(prevDisabled ? "aria-disabled=true" : "")>
        <i class="bx bx-chevron-left"></i> Trước
    </a>
    <a href="#"
       class="btn btn-outline-primary ajax-page @(nextDisabled ? "disabled" : "")"
       data-page="@(Model.PageIndex + 1)"
       @(nextDisabled ? "aria-disabled=true" : "")>
        Sau <i class="bx bx-chevron-right"></i>
    </a>
    <span class="ms-3 text-muted">
        Trang @Model.PageIndex / @Model.TotalPages
    </span>
</div>