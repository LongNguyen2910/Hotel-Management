@model Hotel_Management.Helpers.PaginatedList<Hotel_Management.Models.Khachhangdatphong>
<table class="table table-sm">
    <thead>
        <tr>
            <th class="text-truncate">Mã khách hàng</th>
            <th class="text-truncate">Mã Phòng</th>
            <th class="text-truncate">Ngày Đặt</th>
            <th class="text-truncate">Ngày Check-in</th>
            <th class="text-truncate">Ngày Check-out</th>
            <th class="text-truncate">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewData["NoResults"] != null)
        {
            <tr>
                <td colspan="7" class="text-center text-muted py-4">
                    <i class="bi bi-exclamation-circle">Không tìm thấy phòng phù hợp</i>
                </td>
            </tr>
        }
        else
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <h6 class="mb-0 text-truncate">
                            <a asp-controller="Khachhangs"
                               asp-action="Details"
                               asp-route-id="@item.Makhachhang"
                               class="text-decoration-underline">
                                @item.Makhachhang
                            </a>
                        </h6>
                    </td>
                    <td>
                        <h6 class="mb-0 text-truncate">
                            <a asp-controller="Phongs"
                               asp-action="Details"
                               asp-route-id="@item.Maphong"
                               class="text-decoration-underline">
                                @item.Maphong
                            </a>
                        </h6>
                    </td>
                    <td><h6 class="mb-0 text-truncate">@item.Ngaydat</h6></td>
                    <td><h6 class="mb-0 text-truncate">@item.Ngaycheckin</h6></td>
                    <td><h6 class="mb-0 text-truncate">@item.Ngaycheckout</h6></td>
                    <td>
                        <!-- Trigger modal instead of navigating -->
                        @if (item.Ngaycheckin == null)
                        {
                            <form asp-controller="Khachhangdatphongs"
                                  asp-action="CheckIn"
                                  method="post"
                                  class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="makhachhang" value="@item.Makhachhang" />
                                <input type="hidden" name="maphong" value="@item.Maphong" />
                                <button type="submit" class="btn btn-sm btn-primary">Check-in</button>
                            </form>
                        }
                        @if (item.Ngaycheckout == null)
                        {
                            <form asp-controller="Khachhangdatphongs"
                                  asp-action="CheckOut"
                                  method="post"
                                  class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="makhachhang" value="@item.Makhachhang" />
                                <input type="hidden" name="maphong" value="@item.Maphong" />
                                <button type="submit" class="btn btn-sm btn-primary">Check-out</button>
                            </form>
                        }
                        <a asp-action="Edit" asp-route-makhachhang="@item.Makhachhang" asp-route-maphong="@item.Maphong" class="btn btn-sm btn-primary me-2">Sửa</a>
                    </td>
                </tr>
            }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage;
    var nextDisabled = !Model.HasNextPage;
}

<div class="mt-2 d-flex align-items-center card-footer">
    <a href="#"
       class="btn btn-outline-primary me-2 ajax-page @(prevDisabled ? "disabled" : "")"
       data-page="@(Model.PageIndex - 1)"
       @(prevDisabled ? "aria-disabled=true" : "")>
        <i class="bx bx-chevron-left"></i> Trước
    </a>
    <a href="#"
       class="btn btn-outline-primary ajax-page @(nextDisabled ? "disabled" : "")"
       data-page="@(Model.PageIndex + 1)"
       @(nextDisabled ? "aria-disabled=true" : "")>
        Sau <i class="bx bx-chevron-right"></i>
    </a>
    <span class="ms-3 text-muted">
        Trang @Model.PageIndex / @Model.TotalPages
    </span>
</div>