@model Hotel_Management.Helpers.PaginatedList<Hotel_Management.Models.Khachhang>
<table class="table table-sm">
    <thead>
        <tr>
            <th class="text-truncate">Mã khách hàng</th>
            <th class="text-truncate">Họ tên</th>
            <th class="text-truncate">Quốc tịch</th>
            <th class="text-truncate">Căn cước công dân</th>
            <th class="text-truncate">Số điện thoại</th>
            <th class="text-truncate">Hộ chiếu</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewData["NoResults"] != null)
        {
            <tr>
                <td colspan="7" class="text-center text-muted py-4">
                    <i class="bi bi-exclamation-circle"></i> Không tìm thấy khách hàng phù hợp
                </td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Makhachhang</td>
                    <td>@item.Hoten</td>
                    <td>@item.Quoctich</td>
                    <td>@item.Cccd</td>
                    <td>@item.Sdt</td>
                    <td>@item.Hochieu</td>
                    <td>
                        @if (User.IsInRole("Admin") || User.IsInRole("Quản lý khách sạn") || User.IsInRole("Lễ tân"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Makhachhang" class="btn btn-sm btn-primary me-2">Sửa</a>
                            <a asp-action="Delete" asp-route-id="@item.Makhachhang" class="btn btn-sm btn-outline-danger">Xóa</a>
                        }
                    </td>
                </tr>
            }
        }
    </tbody>


</table>
@{
    var prevDisabled = !Model.HasPreviousPage;
    var nextDisabled = !Model.HasNextPage;
}

<div class="mt-2 d-flex align-items-center card-footer">
    <a href="#"
       class="btn btn-outline-primary me-2 ajax-page @(prevDisabled ? "disabled" : "")"
       data-page="@(Model.PageIndex - 1)"
       @(prevDisabled ? "aria-disabled=true" : "")>
        <i class="bx bx-chevron-left"></i> Trước
    </a>
    <a href="#"
       class="btn btn-outline-primary ajax-page @(nextDisabled ? "disabled" : "")"
       data-page="@(Model.PageIndex + 1)"
       @(nextDisabled ? "aria-disabled=true" : "")>
        Sau <i class="bx bx-chevron-right"></i>
    </a>
    <span class="ms-3 text-muted">
        Trang @Model.PageIndex / @Model.TotalPages
    </span>
</div>