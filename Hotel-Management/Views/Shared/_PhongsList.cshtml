@model Hotel_Management.Helpers.PaginatedList<Hotel_Management.Models.Phong>
@if (Model != null) {
    <table class="table table-sm">
        <thead>
            <tr>
                <th class="text-truncate">Mã Phòng</th>
                <th class="text-truncate">Tên phòng</th>
                <th class="text-truncate">Loại phòng</th>
                <th class="text-truncate">Tình trạng</th>
                <th class="text-truncate">Mô tả</th>
                <th class="text-truncate">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model == null || !Model.Any())
            {
                <div class="text-center">
                    <i class="bi bi-exclamation-circle">Không tìm thấy phòng phù hợp</i>
                </div>
            }
            else 
            {   
                @foreach (var item in Model)
                {
                    <tr>
                        <td><h6 class="mb-0 text-truncate">@item.Maphong</h6></td>
                        <td><h6 class="mb-0 text-truncate">@item.Tenphong</h6></td>
                        <td><h6 class="mb-0 text-truncate">@(item.MaloaiphongNavigation?.Tenloaiphong ?? "Chưa có loại phòng")</h6></td>
                        <td class="text-truncate">
                            @if (item.Tinhtrang == true)
                            {
                                <span class="badge bg-label-success rounded-pill">Sẵn sàng</span>
                            }
                            else
                            {
                                <span class="badge bg-label-secondary rounded-pill">Không sẵn sàng</span>
                            }
                        </td>
                        <td><h6 class="mb-0 text-truncate">@item.Mota</h6></td>
                        <td>
                            <button type="button"
                                    class="btn btn-sm btn-outline-danger"
                                    data-bs-toggle="modal"
                                    data-bs-target="#confirmDeleteModal"
                                    data-id="@item.Maphong"
                                    data-name="@item.Tenphong">
                                Xóa
                            </button>
                            <a asp-controller="Phongs" asp-action="Details" asp-route-id="@item.Maphong" class="btn btn-sm btn-outline-danger">Chi tiết</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    
        var prevDisabled = !Model.HasPreviousPage;
        var nextDisabled = !Model.HasNextPage;
    

    <div class="mt-2 d-flex align-items-center card-footer">
        <a href="#"
           class="btn btn-outline-primary me-2 ajax-page @(prevDisabled ? "disabled" : "")"
           data-page="@(Model.PageIndex - 1)"
           @(prevDisabled ? "aria-disabled=true" : "")>
            <i class="bx bx-chevron-left"></i> Trước
        </a>
        <a href="#"
           class="btn btn-outline-primary ajax-page @(nextDisabled ? "disabled" : "")"
           data-page="@(Model.PageIndex + 1)"
           @(nextDisabled ? "aria-disabled=true" : "")>
            Sau <i class="bx bx-chevron-right"></i>
        </a>
        <span class="ms-3 text-muted">
            Trang @Model.PageIndex / @Model.TotalPages
        </span>
    </div>
}