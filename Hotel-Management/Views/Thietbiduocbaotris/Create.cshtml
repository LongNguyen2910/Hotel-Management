@model Hotel_Management.Models.Thietbiduocbaotri

@{
    ViewData["Title"] = "Create";
}

<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Thêm bảo trì thiết bị</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label class="form-label">Mã thiết bị</label>
                    <input asp-for="Mathietbi" class="form-control" type="number" />
                    <span asp-validation-for="Mathietbi" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Ngày bắt đầu</label>
                    <input asp-for="Ngaybatdau" class="form-control" type="date" />
                    <span asp-validation-for="Ngaybatdau" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Ngày kết thúc</label>
                    <input asp-for="Ngayketthuc" class="form-control" type="date" />
                    <span asp-validation-for="Ngayketthuc" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Lưu</button>
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            </form>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />