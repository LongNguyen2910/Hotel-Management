@model Hotel_Management.Models.Thietbi

@{
    ViewData["Title"] = "Delete Thiết bị";
}

<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Xóa thiết bị</h5>
        </div>
        <div class="card-body">
            <h4>Thiết bị</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Mã</dt>
                <dd class="col-sm-10">@Model.Mathietbi</dd>

                <dt class="col-sm-2">Tên</dt>
                <dd class="col-sm-10">@Model.Tenthietbi</dd>

                <dt class="col-sm-2">Tình trạng</dt>
                <dd class="col-sm-10">@Model.Tinhtrang</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Mathietbi" />
                <button type="submit" class="btn btn-danger">Xóa</button>
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            </form>
        </div>
    </div>
</div>