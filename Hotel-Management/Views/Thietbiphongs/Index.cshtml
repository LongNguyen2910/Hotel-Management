@model IEnumerable<Hotel_Management.Models.Thietbi>

@{
    var currentFilter = ViewData["CurrentFilter"] as string ?? string.Empty;
}

<div class="col-12">
    <div class="card overflow-hidden">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Thiết bị trong phòng</h5>
            <div class="d-flex align-items-center">
                <form asp-action="Index" method="get" class="d-flex me-3">
                    <input name="searchString" value="@currentFilter" class="form-control form-control-sm me-2" placeholder="Tìm theo mã thiết bị..." />
                    <button type="submit" class="btn btn-sm btn-outline-primary">Tìm</button>
                    @if (!string.IsNullOrWhiteSpace(currentFilter))
                    {
                        <a asp-action="Index" class="btn btn-sm btn-link ms-2">Xóa</a>
                    }
                </form>
                <a asp-controller="Thietbiphongs" asp-action="Create" class="btn btn-sm btn-primary">Thêm thiết bị</a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th class="text-truncate">Mã thiết bị</th>
                        <th class="text-truncate">Tên thiết bị</th>
                        <th class="text-truncate">Mã phòng</th>
                        <th class="text-truncate">Tình trạng</th>
                        <th class="text-truncate">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
@foreach (var item in Model)
{
                    <tr>
                        <td><h6 class="mb-0 text-truncate">@item.Mathietbi</h6></td>
                        <td class="text-truncate">@item.Tenthietbi</td>
                        <td class="text-truncate">
                            @if (item.Maphongs != null && item.Maphongs.Any())
                            {
                                @string.Join(", ", item.Maphongs)
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </td>
                        <td class="text-truncate">
                            @if (item.Tinhtrang == true)
                            {
                                <span class="badge bg-label-success rounded-pill">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-label-secondary rounded-pill">Inactive</span>
                            }
                        </td>
                        <td>
                            <a asp-controller="Thietbiphongs" asp-action="Delete" asp-route-id="@item.Mathietbi" class="btn btn-sm btn-outline-danger">Xóa</a>
                        </td>
                    </tr>
}
                </tbody>
            </table>
        </div>
    </div>
</div>