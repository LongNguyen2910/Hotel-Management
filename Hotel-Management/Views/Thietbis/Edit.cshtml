@model Hotel_Management.Models.Thietbi

@{
    ViewData["Title"] = "Sửa thiết bị";
}

<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Sửa thiết bị</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label class="form-label">Mã thiết bị</label>
                    <input asp-for="Mathietbi" class="form-control" readonly />
                    <span asp-validation-for="Mathietbi" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Tên thiết bị</label>
                    <input asp-for="Tenthietbi" class="form-control" />
                    <span asp-validation-for="Tenthietbi" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Tình trạng</label>
                    <select asp-for="Tinhtrang" class="form-select">
                        <option value="true" selected="@(Model.Tinhtrang == true ? "selected" : null)">Active</option>
                        <option value="false" selected="@(Model.Tinhtrang == false ? "selected" : null)">Inactive</option>
                    </select>
                    <span asp-validation-for="Tinhtrang" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Lưu</button>
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}