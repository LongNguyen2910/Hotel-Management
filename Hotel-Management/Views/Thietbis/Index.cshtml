@model Hotel_Management.Helpers.PaginatedList<Hotel_Management.Models.Thietbi>

@{
    ViewData["Title"] = "Danh sách thiết bị";
    var currentFilter = ViewData["CurrentFilter"] as string ?? string.Empty;
}

<div class="col-12">
    <div class="card overflow-hidden">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Danh sách thiết bị</h5>
            <div class="d-flex align-items-center">
                <form asp-action="Index" method="get" class="d-flex me-3">
                    <input name="searchString" value="@currentFilter" class="form-control form-control-sm me-2" placeholder="Tìm kiếm..." />
                    <button type="submit" class="btn btn-sm btn-outline-primary">Tìm</button>
                    @if (!string.IsNullOrWhiteSpace(currentFilter))
                    {
                        <a asp-action="Index" class="btn btn-sm btn-link ms-2">Xóa</a>
                    }
                </form>
                <a asp-controller="Thietbis" asp-action="Create" class="btn btn-sm btn-primary">Thêm thiết bị</a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th class="text-truncate">Mã thiết bị</th>
                        <th class="text-truncate">Tên thiết bị</th>
                        <th class="text-truncate">Tình trạng</th>
                        <th class="text-truncate">Loại thiết bị</th>
                        <th class="text-truncate">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
@foreach (var item in Model)
{
                    <tr>
                        <td><h6 class="mb-0 text-truncate">@item.Mathietbi</h6></td>
                        <td class="text-truncate">@item.Tenthietbi</td>
                        <td class="text-truncate">
                            @if (item.Tinhtrang == true)
                            {
                                <span class="badge bg-label-success rounded-pill">Sẵn sàng</span>
                            }
                            else
                            {
                                <span class="badge bg-label-secondary rounded-pill">Không sẵn sàng</span>
                            }
                        </td>
                        <td class="text-truncate">@item.MaloaithietbiNavigation?.Tenloaithietbi</td>
                        <td>
                            <a asp-controller="Thietbis" asp-action="Edit" asp-route-id="@item.Mathietbi" class="btn btn-sm btn-outline-primary me-2">Sửa</a>
                            <a asp-controller="Thietbis" asp-action="Delete" asp-route-id="@item.Mathietbi" class="btn btn-sm btn-outline-danger">Xóa</a>
                        </td>
                    </tr>
}
                </tbody>
            </table>
        </div>
    </div>
</div>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<div class="mt-3">
    <a asp-action="Index"
       asp-route-pageNumber="@(Model.PageIndex - 1)"
       asp-route-searchString="@ViewData["CurrentFilter"]"
       class="btn btn-outline-primary @prevDisabled">
        <i class="bx bx-chevron-left"></i> Trước
    </a>
    <a asp-action="Index"
       asp-route-pageNumber="@(Model.PageIndex + 1)"
       asp-route-searchString="@ViewData["CurrentFilter"]"
       class="btn btn-outline-primary @nextDisabled">
        Sau <i class="bx bx-chevron-right"></i>
    </a>
    <span class="ms-2 text-muted">
        Trang @Model.PageIndex / @Model.TotalPages
    </span>
</div>