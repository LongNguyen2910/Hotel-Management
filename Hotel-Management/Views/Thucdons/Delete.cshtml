@model Hotel_Management.Models.Thucdon

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}

<<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Xóa thực đơn @Html.DisplayFor(model => model.Ngayapdung)</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Mã thực đơn</dt>
                <dd class="col-sm-9">@Model?.Mathucdon</dd>

                <dt class="col-sm-3">Ngày áp dụng</dt>
                <dd class="col-sm-9">@Model?.Ngayapdung</dd>

                <dt class="col-sm-3">Ngày tạo</dt>
                <dd class="col-sm-9">@Model?.Ngaytao</dd>

                <dt class="col-sm-3">Món ăn</dt>
                <dd class="col-sm-9">
                    @if (Model.Mamons != null && Model.Mamons.Any())
                    {
                        <ul class="list-unstyled mb-0">
                            @foreach (var mon in Model.Mamons)
                            {
                                <li>@mon.Tenmon (@mon.Gia?.ToString("N0") VNĐ)</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span class="text-muted">(Chưa có món ăn nào)</span>
                    }
                </dd>
            </dl>

            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Mathucdon" name="id"/>
                <input type="hidden" asp-for="Ngayapdung" name="date"/>
                <button type="submit" class="btn btn-danger">Xóa</button>
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            </form>
        </div>
    </div>
</div>
