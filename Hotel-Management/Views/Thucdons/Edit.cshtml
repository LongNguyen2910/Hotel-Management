@model Hotel_Management.Models.Thucdon

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}

<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Sửa thông tin thực đơn @(Model.Ngayapdung)</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" 
                asp-route-id="@Model.Mathucdon"
                  asp-route-date="@Model.Ngayapdung.ToString("o")"
                  method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Mathucdon" name="id"/>
                <input type="hidden" asp-for="Ngayapdung" name="date" />
                <div class="mb-3">
                    <label class="control-label">Ngày tạo</label>
                    <input asp-for="Ngaytao" class="form-control" />
                    <span asp-validation-for="Ngaytao" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Chọn các món ăn cho thực đơn</label>
                    <div style="height: 250px; overflow-y: auto; border: 1px solid #ced4da; padding: 10px; border-radius: 0.25rem;">
                        @{
                            // Lấy Set các ID đã chọn từ ViewBag
                            var selectedIds = ViewBag.SelectedMonIds as HashSet<string>;
                        }

                        @foreach (var mon in (ViewBag.AllMons as List<Mon>))
                        {
                            // Kiểm tra xem ID của món này có trong Set đã chọn không
                            bool isChecked = selectedIds != null && selectedIds.Contains(mon.Mamon);

                            <div class="form-check">
                                <input class="form-check-input" type="checkbox"
                                       name="selectedMons"
                                       value="@mon.Mamon"
                                       id="mon_@mon.Mamon"
                                       checked="@isChecked" />

                                <label class="form-check-label" for="mon_@mon.Mamon">
                                    @mon.Tenmon
                                    <small class="text-muted">(@mon.Gia?.ToString("N0") VNĐ)</small>
                                </label>
                            </div>
                        }
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Lưu</button>
                <a asp-action="Index" class="btn btn-secondary">Huỷ</a>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
