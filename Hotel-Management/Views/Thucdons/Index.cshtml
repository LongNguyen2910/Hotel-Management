@model IEnumerable<Hotel_Management.Models.Thucdon>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}

<div class="col-12">
    <div class="card overflow-hidden">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Danh sách thực đơn</h5>
            <div class="d-flex align-items-center">
                <a asp-controller="Thucdons" asp-action="Create" class="btn btn-sm btn-primary">Thêm thực đơn</a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th class="text-truncate">Ngày áp dùng</th>
                        <th class="text-truncate">Ngày tạo</th>
                        <th class="text-truncate">Các món ăn</th>
                        <th class="text-truncate">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-truncate">
                                @item.Ngayapdung
                            </td>
                            <td class="text-truncate">@item.Ngaytao</td>
                            <td>
                                @if (item.Mamons != null && item.Mamons.Any())
                                {
                                    @string.Join("\n", item.Mamons.Select(m => m.Tenmon))
                                }
                                else
                                {
                                    <span class="text-muted">Chưa có món</span>
                                }
                            </td>
                            <td>
                                <a asp-controller="Thucdons" asp-action="Edit" asp-route-id="@item.Mathucdon" asp-route-date="@item.Ngayapdung" class="btn btn-sm btn-outline-primary">Sửa</a>
                                <a asp-controller="Thucdons" asp-action="Delete" asp-route-id="@item.Mathucdon" asp-route-date="@item.Ngayapdung" class="btn btn-sm btn-outline-danger">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>